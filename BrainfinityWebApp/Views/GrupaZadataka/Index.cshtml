@model BrainfinityWebApp.ViewModels.NovaGrupaSveGrupeZadataka

<div class="row">
    <div class="col-md-6">
        <h2>@ViewData["TakmicenjeNaziv"]</h2>
    </div>
    <div class="col-md-4">
