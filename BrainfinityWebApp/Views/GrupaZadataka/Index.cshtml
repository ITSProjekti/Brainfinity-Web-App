@model IEnumerable<GrupaZadatakaViewModel>

@if (Model.Count() != 0)
{

    <div class="row">
        <div class="col-md-4">
            <h2>@Model.First().Takmicenje.Naziv</h2>
        </div>
        <div class="col-md-4">
            <a href="#" class="btn btn-danger pull-right grupa-zadataka-dugme" style="margin-top:20px; margin-bottom:10px; font-size:16px;">
                <span><img src="~/images/user-plus.png" style="height:16px; width: 16px;" /> &nbsp;Prijavi tim</span>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">

            <h3>Osnovna škola</h3>
        </div>
        <div class="col-md-4">
            <a href="#" class="btn btn-primary pull-right grupa-zadataka-dugme" style="margin-top: 20px; margin-bottom:10px; font-size:16px;">
                <span>
                    <img src="~/images/layers.png" style="height:16px; width: 16px;" />&nbsp; Nova grupa zadataka
                </span>
            </a>
        </div>
    </div>

    <div class="row">

        <div class="col-md-8">

            @foreach (var grupa in Model.Where(m => m.NivoSkole == "osnovna"))
            {
                @grupa.Takmicenje.Naziv
                @grupa.NivoSkole
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h3>Srednja škola</h3>
        </div>
    </div>

    @foreach (var grupa in Model.Where(m => m.NivoSkole == "srednja"))
    {
        <div class="row">
            <div class="col-md-8">
                <div class="grupa-zadataka">
                    <div class="row">
                        <div class="col-md-11">
                            <h4 class="grupa-zadataka-naslov">@grupa.Razred. razred</h4>
                        </div>
                        <div class="col-md-1">
                            <a href="#" class="pull-left">
                                <img src="~/images/edit.png" />
                            </a>
                            <a href="#" class="pull-right">
                                <img src="~/images/trash.png" />
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="grupa-zadataka-zadatak">
                                <div class="row">
                                    <div class="col-md-10">
                                        <h5>Novi zadatak</h5>
                                    </div>
                                    <div class="col-md-2">
                                        <a href="#" class="pull-right">
                                            <img src="~/images/x-circle.png" />
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        &nbsp;
                                    </div>
                                    <div class="col-md-12">
                                        &nbsp;
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="col-md-2" style="padding-right:5px;">
                                            <div class="pull-right tacka"></div>
                                        </div>
                                        <div class="col-md-4" style="padding:0;">
                                            <img src="~/images/users.png" class="pull-left" />
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="col-md-2" style="padding-right:5px;">
                                            <div class="pull-right tacka"></div>
                                        </div>
                                        <div class="col-md-4" style="padding:0;">
                                            <img src="~/images/pregledac.png" class="pull-left"  style="margin-top:5px;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

}