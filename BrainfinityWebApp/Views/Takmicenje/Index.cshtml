@model BrainfinityWebApp.ViewModels.NovoTakmicenjeSvaTakmicenja

<div class="row">
    <div class="col-md-7 col-lg-4 col-sm-12 col-xs-12">
        <h2>Takmičenje</h2>
    </div>
    <div class="col-md-5 col-lg-3 col-sm-6 col-xs-12">
        <br />
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#novoTakmicenjeModal" id="btn-dodajNovo">
            <span><img src="~/images/user-plus.png" />&nbsp;&nbsp;&nbsp; Kreiraj takmičenje</span>
        </button>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" id="novoTakmicenjeModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <div class="col-md-1"></div>
                    <div class="col-md-11">

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="font-size:40px;"><span style="color:black;" aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Novo takmičenje</h4>
                    </div>
                </div>

                @using (Html.BeginForm("Create", "Takmicenje", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "forma" }))
                {
                    <div class="modal-body">

                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        @*<label>Naziv takmičenja</label>*@
                                        @Html.LabelFor(m => Model.Takmicenje.Naziv)
                                        @*<input name="novoTakmicenjeNaziv" type="text" id="novoTakmicenjeNaziv" class="form-control" />*@
                                        @Html.TextBoxFor(m => Model.Takmicenje.Naziv, null, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => Model.Takmicenje.Naziv, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <label>Datum održavanja</label>
                                        <div class="input-group date divDatepicker" data-provide="datepicker">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </div>
                                            @*<input type="text" id="txtDatumOd" class="form-control datepicker">*@
                                            @Html.TextBoxFor(m => Model.Takmicenje.datumOd, null, new { @class = "form-control datepicker", @id = "txtDatumOd" })
                                        </div>
                                        @Html.ValidationMessageFor(m => Model.Takmicenje.datumOd, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-5">
                                        <label>&nbsp;</label>
                                        <div class="input-group date divDatepicker" data-provide="datepicker">
                                            <div class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </div>
                                            @*<input type="text" id="txtDatumDo" class="form-control">*@

                                            @Html.TextBoxFor(m => Model.Takmicenje.DatumDo, null, new { @class = "form-control datepicker", @id = "txtDatumDo" })
                                        </div>
                                        @Html.ValidationMessageFor(m => Model.Takmicenje.DatumDo, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                </div>
                            </div>

                            <br />
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-10">
                                    <input type="file" name="slikaTakmicenja" id="slikaTakmicenja" />
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        <div class="greska"></div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                        <button type="submit" class="btn btn-primary" id="btnKreiraj">Kreiraj</button>
                    </div>
                }
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>
<br />
<br />
<div class="row">
    <div class="col-md-12 col-lg-7 col-sm-12 col-xs-12">
        <div class="panel panel-default panel-status"
             data-toggle="collapse"
             data-target="#collapseNastupajuce">
            <div class="panel-heading panel-heading-status">
                <h4 class="panel-title">
                    Nastupajuća takmičenja
                </h4>
                (@Model.SvaTakmicenja.Where(t => t.Status == Status.Nastupajuce).Count())
            </div>
            <div id="collapseNastupajuce" class="panel-collapse collapse">
                <div class="panel-body panel-body-status">
                    <div class="row">
                        @foreach (TakmicenjeViewModel takmicenje in Model.SvaTakmicenja.Where(t => t.Status == Status.Nastupajuce))
                        {
                            <div class="col-md-4">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <img src="@takmicenje.Slika" class="takmicenje-slika" />
                                    </div>
                                    <div class="panel-footer">
                                        <span class="naziv-takmicenja">@takmicenje.Naziv</span>
                                        <span class="datum-takmicenja">@takmicenje.datumOd.Date.ToShortDateString()</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-7 col-sm-12 col-xs-12">
        <div class="panel panel-default panel-status"
             data-toggle="collapse"
             data-target="#collapseAktivno">
            <div class="panel-heading panel-heading-status">
                <h4 class="panel-title">
                    Aktivno takmičenje
                </h4>
                (@Model.SvaTakmicenja.Where(t => t.Status == Status.Aktivno).Count())
            </div>
            <div id="collapseAktivno" class="panel-collapse collapse">
                <div class="panel-body panel-body-status">
                    <div class="row">
                        @foreach (TakmicenjeViewModel takmicenje in Model.SvaTakmicenja.Where(t => t.Status == Status.Aktivno))
                        {
                            <div class="col-md-4">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <img src="@takmicenje.Slika" class="takmicenje-slika" />
                                    </div>
                                    <div class="panel-footer">
                                        <span class="naziv-takmicenja">@takmicenje.Naziv</span>
                                        <span class="datum-takmicenja">@takmicenje.datumOd.Date.ToShortDateString()</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-7 col-sm-12 col-xs-12">
        <div class="panel panel-default panel-status"
             data-toggle="collapse"
             data-target="#collapseArhivirano">
            <div class="panel-heading panel-heading-status">
                <h4 class="panel-title">
                    Arhiva takmičenja
                </h4>
                (@Model.SvaTakmicenja.Where(t => t.Status == Status.Arhivirano).Count())
            </div>
            <div id="collapseArhivirano" class="panel-collapse collapse">
                <div class="panel-body panel-body-status">
                    <div class="row">
                        @foreach (TakmicenjeViewModel takmicenje in Model.SvaTakmicenja.Where(t => t.Status == Status.Arhivirano))
                        {
                            <div class="col-md-4">
                                <div class="panel panel-default panel-arhivirano">
                                    <div class="panel-body">
                                        <img src="@takmicenje.Slika" class="takmicenje-slika arhivirano-slika" />
                                        <div class="arhivirano-takmicenje"></div>
                                    </div>
                                    <div class="panel-footer">
                                        <span class="naziv-takmicenja">@takmicenje.Naziv</span>
                                        <span class="datum-takmicenja">@takmicenje.datumOd.Date.ToShortDateString()</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@section Scripts{

    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.sr-latin.min.js" charset="utf-8"></script>

    <script>
        $(document).ready(function () {

            $('.divDatepicker').datepicker({
                weekStart: 1,
                autoclose: true,
                language: "sr-latin",

            });

            $('.divDatepicker').datepicker().on('changeDate', function () {
                $(this).children('.datepicker').valid();

            })

            $('.datepicker').attr("autocomplete", "off");

        })
    </script>
    @if (!ViewData.ModelState.IsValid)
    {
        <script>
            $("#novoTakmicenjeModal").modal("show");
        </script>
    }
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}