@model BrainfinityWebApp.Models.Korisnik

<div class="container">
    <div class="register-container">
        <div class="row">
            <br />
            
            <div class="col-md-6 col-md-offset-3">
                <img src="~/images/Brainfinity_logo_1.png" style="width:100%; height:auto" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <img style="width:100%; height:auto; border-radius: 20px;" src="https://clipartart.com/images/clipart-profile-4.jpg" />
            </div>
        </div>
        @using (Html.BeginForm("RegisterForm", "Account", FormMethod.Post, new { @id = "idForm", @enctype = "multipart/form-data" }))
        {
            <div class="row" style="margin-top: 5%;">
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">

                        @Html.LabelFor(k => k.Username)
                        @Html.TextBoxFor(k => k.Username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(k => k.Username, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        @Html.LabelFor(k => k.Email)
                        @Html.TextBoxFor(k => k.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(k => k.Email, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        @Html.LabelFor(k => k.Password)
                        @Html.PasswordFor(k => k.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(k => k.Password, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-8 col-md-offset-2">
                    <div class="form-group">
                        @Html.LabelFor(k => k.PotvrdiPassword)
                        @Html.PasswordFor(k => k.PotvrdiPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(k => k.PotvrdiPassword, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3 col-md-offset-2">
                    <div class="form-group">
                        @Html.LabelFor(k => k.Logo)
                        <input type="file" name="logo" id="logo" />
                    </div>
                </div>
                <div class="col-md-3 col-md-offset-1">
                    <div class="form-group">
                        @Html.LabelFor(k => k.Slika)
                        <input type="file" name="slika" id="slika" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-md-offset-2" style="padding-top: 1.1%;">
                    <a href="@Url.Action("Login", "Account")" class="text-primary">Uloguj se</a>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary pull-right"> Registruj se </button>
                </div>
            </div>

        }
    </div>
</div>

@section Scripts{
    <script>
        $("#sidebar").remove();
        $("#content").css("margin", "0");
        $("#content").children("nav").remove();
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}